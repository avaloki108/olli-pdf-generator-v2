{
  "name": "olli-pdf-generator",
  "version": "2.0.0",
  "description": "OLLI Walks & Hikes PDF Generator with Location Management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "olli",
    "pdf",
    "generator",
    "walks",
    "hikes"
  ],
  "author": "OLLI",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.2",
    "buffer": "^6.0.3",
    "css-loader": "^6.8.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.0",
    "html-webpack-plugin": "^5.5.3",
    "process": "^0.11.10",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "jspdf": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.olli.pdfgenerator",
    "productName": "OLLI PDF Generator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
